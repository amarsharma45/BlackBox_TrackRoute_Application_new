@model RouteViewListsModel

@{
    ViewData["Title"] = "Manage Routes";
}

<style>
    /* Typography and Headings */
    h2 {
        font-family: Arial, sans-serif;
        color: #333;
        margin-bottom: 20px;
    }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin-top: 20px !important;
        
       
    }

    thead {
        background-color: #007BFF;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Responsive table wrapper */
    .table-responsive {
        overflow-x: auto;
    }

    /* Icon Styles */
    .icon-button {
        border: none;
        background: none;
        cursor: pointer;
        margin-right: 8px;
    }

    .edit-icon {
        color: #28a745; /* green */
    }

    .delete-icon {
        color: #dc3545; /* red */
    }

    /* Form label styling */
    .form-label {
        font-weight: 600;
        color: #0d6efd;
        display: block;
        margin-bottom: 0.25rem;
    }

    /* Modal form group spacing */
    .modal-body .row {
        margin-bottom: 15px;
    }

    .modal-body .form-group {
        padding-right: 15px;
    }

    /* Bootstrap form-select overrides for consistency */
    select.form-select {
        border: 1px solid #007BFF;
        border-radius: 0.375rem;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        color: #212529;
        background-color: white;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        select.form-select:focus {
            border-color: #0056b3;
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

        select.form-select option {
            padding: 0.25rem 0.5rem;
            cursor: pointer;
            font-weight: normal;
            color: #212529;
        }

            select.form-select option:hover {
                background-color: #c8f7c875;
                color: black;
            }

        select.form-select[multiple] {
            height: auto;
            min-height: 150px;
            overflow-y: auto;
        }

    /* Buttons */
    .btn {
        border-radius: 0.375rem;
        padding: 0.375rem 1rem;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007BFF;
        border-color: #007BFF;
        color: white;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #0056b3;
            border-color: #0056b3;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover,
        .btn-secondary:focus {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }

    /* Utility classes */
    .mb-2 {
        margin-bottom: 0.5rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

</style>

<h2>Routes</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3" style="height: 680px !important;">
            <div class="card-body">
             @*    <a href="javascript:void(0);" id="btnCreateRoute" class="add-load-button mb-3">+ Add New Route</a> *@
                <a class="add-load-button"><b>+ Add New Route</b></a>
                <div style="max-height: 380px !important;overflow-y: scroll;">
                    <table>
                        <thead>
                            <tr>
                                <th>Sr</th>
                                <th>Route Name</th>
                                <th>Description</th>
                                <th>Created By</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sr = 1;
                            }
                            @foreach (var route in Model.RouteDetailList)
                            {
                                <tr>
                                    <td>@sr</td>
                                    <td>@route.RouteName</td>
                                    <td>@route.RouteDescription</td>
                                    <td>@route.CreatedBy</td>
                                    <td>
                                        <a href="javascript:void(0);"
                                           class="icon-button edit-icon edit-load"
                                           data-id="@route.RouteId" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                sr++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3" style="height: 680px !important;">
            <div class="card-body">
                Link load to route
                <hr />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Routes</label>
                        <select class="form-select" id="drpRoutes" >
                            @foreach (var item in Model.RouteList)
                            {
                                <option value="@item.DrpValue">@item.DrpText</option>
                            }

                        </select>
                        <hr />
                        <label class="form-label">Trucks</label>
                        <select class="form-select" id="drpTruck">
                            @foreach (var item in Model.TruckList)
                            {
                                <option value="@item.DrpValue">@item.DrpText</option>
                            }

                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Loads</label>
                        <select id="drpLoads" class="form-select select2" multiple size="5">
                            @foreach (var item in Model.LoadList)
                            {
                                <option value="@item.DrpValue">@item.DrpText</option>
                            }

                        </select>
                    </div>
                  
                    <div class="d-flex justify-content-end gap-2">
                        <button id="btnSaveMapping" type="button" class="btn btn-primary" style="margin-top: 10px;margin-bottom: 8px;">Save Mapping</button>
                     
                    </div>
                    <hr />
                </div>
                <div style="max-height: 300px !important;overflow-y: scroll;">
                    <table>
                        <thead>
                            <tr>
                                <th>Sr</th>
                                <th>Route Name</th>
                                <th>Load Name</th>
                                <th>TruckNumber</th>
                                <th>Truck ModelName</th>
                                <th>Pickup ocation</th>
                                <th>Destination Location</th>
                                <th>Route Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Sr3 = 1;
                            }
                            @foreach (var item in Model.Route_Load_DataMappingList)
                            {
                                <tr>
                                    <td>@Sr3</td>
                                    <td>@item.RouteName</td>
                                    <td>@item.LoadName</td>
                                    <td>@item.TruckNumber</td>
                                    <td>@item.ModelName</td>
                                    <td>@item.PickupLocation</td>
                                    <td>@item.DestinationLocation</td>
                                    <td>@item.RouteDescription</td>
                                </tr>
                                Sr3++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editLoadModal" tabindex="-1" aria-labelledby="editLoadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLoadModalLabel">Edit Load</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editLoadModalContent">
                <!-- Partial view content will be loaded here -->
            </div>
        </div>
    </div>
</div>


 <script>
            $(document).ready(function () {


                    $('#drpRoutes').on('change', function() {
                        $('#drpLoads option').prop('selected', false);   
                    $('#drpLoads').trigger('change'); 
                });


                 $('#btnSaveMapping').on('click', function(e) {
                    e.preventDefault();

                    var selectedRoute = $('#drpRoutes').val();
                    var selectedTruck = $('#drpTruck').val();
                    var selectedLoads = $('#drpLoads').val() || []; 

           
                    var postData = {
                        RouteId: selectedRoute,
                        TruckId: selectedTruck,
                        LoadIds: selectedLoads
                    };
                    debugger;
                    $.ajax({
                        url: '@Url.Action("SaveMapping")', 
                        type: 'POST',
                        data: JSON.stringify(postData),
                        contentType: 'application/json; charset=utf-8',
                        success: function(response) {
                            if (response.success) {
                                alert('Mapping saved!');
                              location.reload();
                              
                            } else {
                                alert('Error: ' + response.message);
                            }
                        }
                    });
                });


           // Add Button
           $('.add-load-button').click(function () {
               var loadId = 0;
               $("#editLoadModalLabel").text("Create Load");

               openFormModal(
                   '@Url.Action("CreateRoute")',  
                '@Url.Action("AddUpdateRoute")',
                   '#editLoadModal',
                   '#editLoadModalContent',
                   '#editLoadForm'
               );
           });

           // Edit Button
           $('.edit-load').click(function () {
               var loadId = $(this).data('id');
               $("#editLoadModalLabel").text("Update Load");

               openFormModal(
                '@Url.Action("EditRoute")' + '?id=' + loadId,
                '@Url.Action("AddUpdateRoute")',
                   '#editLoadModal',
                   '#editLoadModalContent',
                   '#editLoadForm'
               );
           });
       });

       function openFormModal(getUrl, postUrl, modalId, contentId, formId, onSuccess) {

           $.ajax({
               url: getUrl,
               type: 'GET',
               success: function (response) {
                   $(contentId).html(response);

                   var myModal = new bootstrap.Modal(document.querySelector(modalId), {});
                   myModal.show();

                   $(formId).off("submit").on("submit", function (event) {
                       event.preventDefault();
                       var form = $(this);

                       $.ajax({
                           url: postUrl,
                           type: 'POST',
                           data: form.serialize(),
                           success: function (result) {
                               if (result.success) {
                                   myModal.hide();

                                   if (typeof onSuccess === "function") {
                                       onSuccess(result);
                                   } else {
                                       location.reload(); 
                                   }
                               } else {
                                   $(contentId).html(result); 
                               }
                           }
                       });
                   });
               }
           });
       }
</script>
