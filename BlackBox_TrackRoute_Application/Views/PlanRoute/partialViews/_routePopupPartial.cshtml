@model RouteViewModel
<form id="editLoadForm" asp-controller="AddUpdateRout" method="post">
    <input type="hidden" asp-for="RouteId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="RouteName" class="form-label"></label>
            <input asp-for="RouteName" class="form-control" />
            <span asp-validation-for="RouteName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <div class="col-md-6">
                <label asp-for="RouteDescription" class="form-label"></label>
                <textarea asp-for="RouteDescription" class="form-control" rows="3" maxlength="200"></textarea>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">@Model.btnText</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-label {
        font-weight: 600;
        color: #0d6efd;
    }

    .row {
        margin-bottom: 1rem;
    }
</style>
