@model RouteDataViewModel
@{
}
<style>
    /* Typography and Headings */
    h2 {
        font-family: Arial, sans-serif;
        color: #333;
        margin-bottom: 20px;
    }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin-top: 20px !important;
    }

    thead {
        background-color: #007BFF;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Responsive table wrapper */
    .table-responsive {
        overflow-x: auto;
    }

   

    /* Form label styling */
    .form-label {
        font-weight: 600;
        color: #0d6efd;
        display: block;
        margin-bottom: 0.25rem;
    }

  

    /* Buttons */
    .btn {
        border-radius: 0.375rem;
        padding: 0.375rem 1rem;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007BFF;
        border-color: #007BFF;
        color: white;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #0056b3;
            border-color: #0056b3;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover,
        .btn-secondary:focus {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }

    /* Utility classes */
    .mb-2 {
        margin-bottom: 0.5rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

</style>

<div class="card mb-3" style="height: 680px !important;">
    <div class="card-body">

        <label class="form-label">Routes</label>
        <select class="form-select-sm" id="drpRoute" style="width:200px">
            <option value="">Select Route</option>
            @foreach (var item in Model.routelist)
            {
                <option value="@item.DrpText">@item.DrpText</option>
            }
        </select>
        <div style="max-height: 380px !important;overflow-y: scroll;">
            <table>
                <thead>
                    <tr>
                        <th>Sr</th>
                        <th>Route Name</th>
                        <th>Truck</th>
                        <th>Truck Capacity</th>
                        <th>Load Name</th>
                        <th>Load Pickup Location</th>
                        <th>Load Destination</th>
                        <th>Load Weight</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @{
                        int sr = 1;
                    }
                    @foreach (var route in Model.routeDataModels)
                    {
                        <tr>
                            <td>@sr</td>
                            <td>@route.RouteName</td>
                            <td>@route.Truck</td>
                            <td>@route.TruckCapacity</td>
                            <td>@route.LoadName</td>
                            <td>@route.LoadPickUpLocation</td>
                            <td>@route.LoadDestination</td>
                            <td>@route.LoadWeight</td>
                        </tr>
                        sr++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#drpRoute").on("change", function () {
            var selectedRoute = $(this).val();

            $("table tbody tr").each(function () {
                var routeName = $(this).find("td:eq(1)").text(); // 2nd column = Route Name
                if (selectedRoute === "" || routeName === selectedRoute) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>