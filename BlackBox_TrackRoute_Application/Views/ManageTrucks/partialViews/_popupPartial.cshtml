@model TruckDetailsByIdViewModel
<form id="editLoadForm" asp-controller="ManageTrucks" method="post">

    <input type="hidden" asp-for="TruckId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="TruckNumber" class="form-label"></label>
            <input asp-for="TruckNumber" class="form-control" />
            <span asp-validation-for="TruckNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ModelName" class="form-label"></label>
            <input asp-for="ModelName" class="form-control" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="UnitId" class="form-label"></label>
            <select asp-for="UnitId" class="form-select">
                <option value="">-- Select Unit --</option>
                <option value="1">Kg</option>
                <option value="2">Ton</option>
                <option value="3">Pound</option>
                <option value="4">Gram</option>
                <option value="5">Ounce</option>
                <option value="6">Others</option>
            </select>
            <span asp-validation-for="UnitId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="StatusId" class="form-label"></label>
            <select asp-for="StatusId" class="form-select">
                <option value="">-- Select Status --</option>
                <option value="1">Available</option>
                <option value="2">Dispatched</option>
                <option value="3">Maintenance</option>
            </select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>
      @*   <div class="col-md-6">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div> *@
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">@Model.btntext</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-label {
        font-weight: 600;
        color: #0d6efd;
    }

    .row {
        margin-bottom: 1rem;
    }
</style>
