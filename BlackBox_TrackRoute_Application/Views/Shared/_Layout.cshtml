<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlackBox_TrackRoute_Application</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlackBox_TrackRoute_Application.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Add FontAwesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <style>
        /* Base Layout */
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
        }

        .main-container {
            display: flex;
            flex: 1;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 250px;
            background-color: #1e293b;
            color: #fff;
            padding: 20px;
            box-shadow: 2px 0 6px rgba(0,0,0,0.1);
        }

            .sidebar h5 {
                font-weight: bold;
                margin-bottom: 20px;
                letter-spacing: 1px;
                color: #f8fafc;
            }

            .sidebar .nav-link {
                color: #cbd5e1;
                margin-bottom: 8px;
                font-weight: 500;
                border-radius: 5px;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #0d6efd;
                    color: #fff;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: #fff;
                    font-weight: bold;
                }

        /* Main Content */
        .content {
            flex: 1;
            padding: 30px;
            background-color: #f4f6f9;
        }

        /* Header Styling */
        .header-bar {
            height: 70px;
            background: linear-gradient(90deg, #1a283d, #2e71e3fc);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .header-bar h2 {
                margin: 0;
                font-size: 24px;
                font-weight: 600;
            }

        .user-info span {
            font-size: 16px;
            margin-right: 15px;
        }

        .user-info a.btn {
            font-weight: 600;
            text-transform: uppercase;
            transition: 0.3s;
        }

            .user-info a.btn:hover {
                background-color: #c82333;
            }

        /* Footer Styling */
        footer.footer {
            padding: 0px 30px;
            background-color: #1e293b;
            color: #fff;
            text-align: center;
            font-size: 14px;
        }

            footer.footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                footer.footer a:hover {
                    text-decoration: underline;
                }

        /* Optional Cards/Widgets */
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            transition: 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-bar">
            <h2 style="color:wheat">Welcome to Track Route</h2>
            <div class="user-info d-flex align-items-center" style="color:wheat">
                <span>User: <strong>@User.Identity.Name</strong></span>
                <a class="btn btn-danger btn-sm" asp-controller="ManageUser" asp-action="Logout">Logout</a>
            </div>
        </div>
    </header>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h5>Navigation</h5>
            @{
                string currentController = ViewContext.RouteData.Values["controller"].ToString();
                string currentAction = ViewContext.RouteData.Values["action"].ToString();
            }
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "RouteDetails" ? "active" : "")"
                       asp-controller="PlanRoute" asp-action="RouteDetails">Plan Route</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "ManageTrucks" ? "active" : "")"
                       asp-controller="ManageTrucks" asp-action="TruckDetails">Manage Trucks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "ManageLoad" ? "active" : "")"
                       asp-controller="ManageLoad" asp-action="ManageLoad">Manage Load</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "RetrievalDetailedRouteData" ? "active" : "")"
                       asp-controller="PlanRoute" asp-action="RetrievalDetailedRouteData">Data Retrieval</a>
                </li>

                
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        &copy; 2025 - BlackBox_TrackRoute_Application-Interview Task (Amar Sharma)
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
