@model LoadsDetailsByIdViewModel
<form id="editLoadForm" asp-controller="AddOrUpdateLoad" method="post">
    <input type="hidden" asp-for="LoadId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="LoadName" class="form-label"></label>
            <input asp-for="LoadName" class="form-control" />
            <span asp-validation-for="LoadName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PickupLocation" class="form-label"></label>
            <input asp-for="PickupLocation" class="form-control" />
            <span asp-validation-for="PickupLocation" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="DestinationLocation" class="form-label"></label>
            <input asp-for="DestinationLocation" class="form-control" />
            <span asp-validation-for="DestinationLocation" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Weight" class="form-label"></label>
            <input asp-for="Weight" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="UnitId" class="form-label">Unit</label>
            <select asp-for="UnitId" class="form-select">
                <option value="">-- Select Unit --</option>
                <option value="1">Kg</option>
                <option value="2">Ton</option>
                <option value="3">Pound</option>
                <option value="4">Gram</option>
                <option value="5">Ounce</option>
                <option value="6">Others</option>
            </select>
            <span asp-validation-for="UnitId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" maxlength="200"></textarea>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">@Model.btntext</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-label {
        font-weight: 600;
        color: #0d6efd;
    }

    .row {
        margin-bottom: 1rem;
    }
</style>
